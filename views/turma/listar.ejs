<table class="table table-flush table-striped table-hover" id="tabela"></table>

<%- contentFor("scripts") %>
<script type="text/javascript">
	//<![CDATA[
	"use strict";

	var tabela = prepareDataTable("tabela", {
		order: [[1, "desc"], [2, "asc"], [3, "asc"], [4, "asc"]],
		deferRender: true,
		columns: [
			{ title: "", "class": "col-min", searchable: false, orderable: false, data: "id", render: function (v, type, row) {
				return '<a target="_blank" title="Editar" href="<%- root %>/turma/editar?id=' + row.id + '" class="btn btn-sm btn-outline-primary"><i class="fa fa-fw fa-edit"></i></a> <button title="Excluir" type="button" data-excluir="1" class="btn btn-sm btn-outline-danger"><i class="fa fa-fw fa-times"></i></button>';
			} },
			{ title: "Ano", "type": "number", data: "ano" },
			{ title: "Série", "type": "number", data: "serie" },
			{ title: "Escola", render: encode, data: "escola" },
			{ title: "Sala", render: encode, data: "sala" },
			{ title: "Livro", data: "idlivro" }
		],
		data: <%- JSON.stringify(lista) %>,
		export: { title: "Turmas" }
	});

	$("#tabela").on("click", "tbody button", function () {
		if (JsonWebApi.active)
			return;

		var trClicada = this.parentNode.parentNode,
			nome = null,
			turma = tabela.row(trClicada).data();

		if (this.getAttribute("data-excluir")) {
			Swal.okcancel({
				html: 'Tem certeza que deseja excluir a turma "' + turma.nome + '"? Esta operação NÃO pode ser desfeita!<br/><br/>Para confirmar a exclusão, por favor, digite abaixo o nome da turma conforme exibido acima.<br/><br/><label for="txtExcluirNome">Nome da turma</label><input type="text" class="form-control" spellcheck="false" autocomplete="off" id="txtExcluirNome" />',
				confirmButtonText: "Excluir",
				preConfirm: function () {
					nome = $("#txtExcluirNome").val().toLowerCase();
					return true;
				}
			}, null, true).then(function (result) {
				if (JsonWebApi.active || !trClicada)
					return;

				if (result.value) {
					if (nome !== turma.nome.toLowerCase()) {
						Swal.error("O nome da turma não confere! " + emoji.sad);
						return;
					}

					Swal.wait();

					JsonWebApi.delete("<%- root %>/api/turma/excluir", function (response) {
						if (response.success) {
							Swal.success("Turma excluída com sucesso! " + emoji.happy);
							tabela.row(trClicada).remove().draw();
						} else {
							Swal.error(response.value + " " + emoji.sad);
						}
						trClicada = null;
					}, "id", turma.id);
				}
			});
		}
	});

	//]]>
</script>
